<h1><%= @bach.name %> contestants:</h1>

<% @bach.contestants.each do |contestant| %>
  <%= link_to("#{contestant.name}", "/contestants/#{contestant.id}") %>
  <p>Age: <%= contestant.age %></p>
  <p>Hometown: <%= contestant.hometown %></p>
<% end %>

<h2>Hometowns:</h2>
<section id="hometowns">
  <% @bach.cont_hometowns.each do |town| %>
    <p><%= town %></p>
  <% end %>
</section>